{% case media.media_type %}
  {% when 'image' %}
    <img
      class="w-full h-auto object-contain"
      src="{{ media | image_url }}"
      alt="{{ media.preview_image.alt }}"
    >
  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'w-full h-auto object-contain' }}
  {% when 'video' %}
    {{ media | video_tag: controls: true, class: 'w-full h-auto object-contain' }}
  {% when 'model' %}
    {{ media | model_viewer_tag }}
  {% else %}
    {{ media | media_tag }}
{% endcase %}
